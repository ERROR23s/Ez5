<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/MusicIcn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/MusicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:singleLine="true"
        android:text="MusicDefName"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/MusicIcn"
        app:layout_constraintTop_toTopOf="@+id/MusicIcn" />

    <TextView
        android:id="@+id/AutorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="AutorDefName"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/MusicName"
        app:layout_constraintTop_toBottomOf="@+id/MusicName" />

</androidx.constraintlayout.widget.ConstraintLayout>